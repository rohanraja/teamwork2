<div class="page-header">
  <%= link_to components_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_component_path(@component), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h2><%= @component.application.name %> > <%= @component.name %></h2>
</div>

<dl class="dl-horizontal">

  <dt>Description:</dt>
  <dd><%= @component.description %></dd>

  <dt>Category:</dt>
  <dd><%= @component.category %></dd>

  <dt>Status:</dt>
  <dd><%= @component.status %></dd>
</dl>
