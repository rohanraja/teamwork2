<div class="page-header">
  <%= link_to testsuites_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_testsuite_path(@testsuite), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show testsuite</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @testsuite.title %></dd>

</dl>

    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
                <th>Test Cases</th>
          </tr>
        </thead>

        <tbody>
          <%= content_tag_for(:tr, @testsuite.testcases) do |testcase| %>
                <td><%= testcase.title %></td>
          <% end %>
        </tbody>
      </table>
    </div>

    <hr>

    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
                <th>Associated Components</th>
          </tr>
        </thead>

        <tbody>
          <%= content_tag_for(:tr, @testsuite.components) do |component| %>
                <td><%= component.name %></td>
          <% end %>
        </tbody>
      </table>
    </div>
