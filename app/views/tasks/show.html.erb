<div class="page-header">
  <%= link_to tasks_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_task_path(@task), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show task</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @task.title %></dd>

  <dt>Description:</dt>
  <dd><%= @task.description %></dd>

  <dt>User:</dt>
  <dd><%= @task.user %></dd>

  <dt>Priority:</dt>
  <dd><%= @task.priority %></dd>

  <dt>Status:</dt>
  <dd><%= @task.status %></dd>

  <dt>Category:</dt>
  <dd><%= @task.category %></dd>

</dl>

    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
                <th>Associated Components</th>
          </tr>
        </thead>

        <tbody>
          <%= content_tag_for(:tr, @task.components) do |component| %>
                <td><%= link_to component.name, [component.application, component] %></td>
          <% end %>
        </tbody>
      </table>
    </div>
