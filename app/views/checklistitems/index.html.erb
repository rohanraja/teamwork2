<div class="page-header">
  <%= link_to new_checklistitem_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Checklistitem
  <% end %>
  <h1>Listing checklistitems</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Checklist</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @checklistitems) do |checklistitem| %>
            <td><%= checklistitem.title %></td>
            <td><%= checklistitem.checklist %></td>
            <td><%= link_to 'Show', checklistitem %></td>
        <td><%= link_to 'Edit', edit_checklistitem_path(checklistitem) %></td>
        <td><%= link_to 'Destroy', checklistitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
